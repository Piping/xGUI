## DWM Setup ##
free_mem() {
    free | awk '/Mem/ {printf "Mem: %d GB/%d GB\n", $4/1024/1024, $2/1024/1024.0}'
}
volume() {
    printf "éŸ³ %s(%s)" $(amixer get -D pulse Master | awk -F'[][]' 'END {print $2," ",$4}')
}
while true; do
    xsetroot -name " $(volume) | $(free_mem) | $(date)"
    read -t 1
done &
echo $! >> /tmp/dwm_autostart.pid
