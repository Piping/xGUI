xrdb ~/.Xresources

export GTK_IM_MODULE=fcitx
export QT_IM_MODULE=fcitx
export XMODIFIERS=@im=fcitx
pkill fcitx
fcitx 2>/dev/null &

# 背景设置
BACKGROUND=/usr/share/backgrounds/Origin_of_nature_by_Julian_Tomasini.jpg 
BACKGROUND=~/code/gui/wallpapers/Triangle-Out-Girl.jpg
[ -f  "$BACKGROUND" ] && \
xwallpaper --zoom "$BACKGROUND"

# 重置键盘按键映射
setxkbmap -option
# 交换大小写锁定和Escape 
setxkbmap -option caps:escape

