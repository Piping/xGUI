xrdb ~/.Xresources

export GTK_IM_MODULE=fcitx
export QT_IM_MODULE=fcitx
export XMODIFIERS=@im=fcitx
pkill fcitx
fcitx 2>/dev/null &

#wallpaper
[ -f  /usr/share/backgrounds/Origin_of_nature_by_Julian_Tomasini.jpg ] && \
xwallpaper --zoom /usr/share/backgrounds/Origin_of_nature_by_Julian_Tomasini.jpg

# clear mapping
setxkbmap -option
# set necessary keymap on start
setxkbmap -option caps:escape

## DWM Setup ##
free_mem() {
    free | awk '/Mem/ {printf "Mem: %d GB/%d GB\n", $4/1024/1024, $2/1024/1024.0}'
}
volume() {
    printf "éŸ³ %s(%s)" $(amixer get -D pulse Master | awk -F'[][]' 'END {print $2," ",$4}')
}
while true; do
    xsetroot -name " $(volume) | $(free_mem) | $(date)"
    read -t 1
done &
